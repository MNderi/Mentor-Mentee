<script>

const scrollholders = document.querySelectorAll("#infiniteScroll--left");

scrollholders.forEach((holder) => {
	const scrollWidth = holder.scrollWidth;
	let isScrollingPaused = false;

	window.addEventListener("load", () => {
		self.setInterval(() => {
			if (isScrollingPaused) {
				return;
			}
			const first = holder.querySelector("article");

			if (!isElementInViewport(first)) {
				holder.appendChild(first);
				holder.scrollTo(holder.scrollLeft - first.offsetWidth, 0);
			}
			if (holder.scrollLeft !== scrollWidth) {
				holder.scrollTo(holder.scrollLeft + 1, 0);
			}
		}, 15);
	});

	function isElementInViewport(el) {
		var rect = el.getBoundingClientRect();
		return rect.right > 0;
	}

	function pauseScrolling() {
		isScrollingPaused = true;
	}

	function resumeScrolling() {
		isScrollingPaused = false;
	}
	const allArticles = holder.querySelectorAll("article");
	for (let article of allArticles) {
		article.addEventListener("mouseenter", pauseScrolling);
		article.addEventListener("mouseleave", resumeScrolling);
	}
});


function openDialog(element) {
    var programName = element.getAttribute('data-program');
    var creatorName = element.getAttribute('data-creator');

    document.getElementById('dialogProgram').value = programName;
    document.getElementById('dialogCreator').value = creatorName;
    document.getElementById("confirmationDialog").style.display = "block";
}

  function closeDialog(){

      document.getElementById("confirmationDialog").style.display = "none";
    }      



// Search with filters
  document.addEventListener('DOMContentLoaded', function () {
  const searchInput = document.getElementById('search-bar');
  const filterDropdown = document.getElementById('filterDropdown');
  const articles = document.querySelectorAll('.holder article');

  // Event listener for the search input
  searchInput.addEventListener('input', function () {
    const searchTerm = searchInput.value.toLowerCase();

    articles.forEach(article => {
      const articleName = article.querySelector('h5').textContent.toLowerCase();
      const isVisible = articleName.includes(searchTerm);
      article.style.display = isVisible ? 'block' : 'none';
    });
  });

  // Event listener for the category filter dropdown
  filterDropdown.addEventListener('change', function () {
    const selectedCategory = filterDropdown.value.toLowerCase();

    articles.forEach(article => {
      const articleCategory = article.querySelector('p').textContent.toLowerCase();
      const isVisible = selectedCategory === 'all' || selectedCategory === articleCategory;
      article.style.display = isVisible ? 'block' : 'none';
    });
  });
});

</script>
