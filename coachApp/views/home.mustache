  <script>
      const testimonialPage = document.querySelector(".testimony-slide[data-slider-slide-index='1']");
testimonialPage.classList.add("testimony-slide--active");


document.querySelector(".testimony").addEventListener("mouseout", function(){
  document.querySelector(".testimony-slide--active").classList.remove("testimony-slide--active")
  document.querySelector(".testimony-slide[data-slider-slide-index='1']").classList.add("testimony-slide--active")
});


document.querySelectorAll(".testimony-slide").forEach( 
  elem => elem.addEventListener("mouseover", function(){
    document.querySelector(".testimony-slide--active").classList.remove("testimony-slide--active")
    this.classList.add("testimony-slide--active")
  })
)

  </script>

