.column{
  
  flex:95%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FEFEB7;
  font-family: 'Open Sans', sans-serif;
  padding-left: 70px;
  padding-right: 100px;
  font-size: larger;
}

@keyframes wobble {
  0% {
    transform: translate(-50%, -50%) rotate(0deg);
  }
  25% {
    transform: translate(-50%, -50%) rotate(10deg);
  }
  50% {
    transform: translate(-50%, -50%) rotate(-10deg);
  }
  75% {
    transform: translate(-50%, -50%) rotate(5deg);
  }
  100% {
    transform: translate(-50%, -50%) rotate(0deg);
  }
}
  .nav-link{
    color:#27036A;
