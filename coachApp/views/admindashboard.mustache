<script>
function openNav() {
  document.getElementById("wrapper").style.width = "250px";
  document.getElementById("content").style.marginLeft = "270px";
}

function closeNav() {
  document.getElementById("wrapper").style.width = "0";
  document.getElementById("content").style.marginLeft = "50px";
}
function showConfirmation(funame) {
  document.getElementById('confirmation-modal').style.display = 'flex';
  form =document.querySelector('#delete-form');
  form.action = `/dashboard/mentees/${funame}/delete`;
}

function closeConfirmation() {
  document.getElementById('confirmation-modal').style.display = 'none';
}
function closeEditModal() {
  const editModal = document.getElementById('edit-modal');
  editModal.style.display = 'none';
}
function openEditModal(funame, mail, customRadio) {
    document.getElementById('funame').value = funame;
    document.getElementById('mail').value = mail;
    document.getElementById('customRadio').value = customRadio;
    document.getElementById('edit-modal').style.display = 'block';
    const form = document.querySelector('#edit-form');
    form.action = `/dashboard/mentees/${mail}/update`;
}

const table = document.getElementById('data-table');
    const prevButton = document.getElementById('prev-page');
    const nextButton = document.getElementById('next-page');
    const pageNumber = document.getElementById('page-number');
    const itemsPerPage = 5; // Number of items to show per page
    let currentPage = 1;
    let totalItems = table.rows.length - 1; // Subtract header row

    table.addEventListener('click', (event) => {
    if (event.target.classList.contains('edit-button')) {
        const row = event.target.closest('tr');
        const funame = row.querySelector('#name').textContent;
        const mail = row.cells[1].textContent;
        const password = row.cells[2].textContent;
        const customRadio = row.cells[3].textContent;
        openEditModal(funame, mail, password, customRadio);
    }
});

    // Function to display items for the current page
    function displayPage() {
        const startIndex = (currentPage - 1) * itemsPerPage;
        const endIndex = startIndex + itemsPerPage;

        for (let i = 1; i < table.rows.length; i++) {
            table.rows[i].style.display = i > startIndex && i <= endIndex ? '' : 'none';
        }

        pageNumber.textContent = `Page ${currentPage}`;
    }

   
    displayPage();


    prevButton.addEventListener('click', () => {
        if (currentPage > 1) {
            currentPage--;
            displayPage();
        }
    });

    // Next page button click event
    nextButton.addEventListener('click', () => {
        if (currentPage < Math.ceil(totalItems / itemsPerPage)) {
            currentPage++;
            displayPage();
        }
    });

    function closeCreateModal() {
  const createModal = document.getElementById('create-modal');
  createModal.style.display = 'none';
}
function openCreateModal() {
    document.getElementById('create-modal').style.display = 'block';
}

$(document).ready(function () {
  $('#searchInput').on('keyup', function () {
    const inputText = $(this).val().toLowerCase();
    $('#data-table tbody tr').filter(function () {
      $(this).toggle($(this).text().toLowerCase().indexOf(inputText) > -1);
    });
  });
});
   
    </script>
